<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.TextField.Custom" parent="Widget.Design.TextInputLayout">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="hintTextColor">@color/gray_text</item>
        <item name="placeholderTextColor">@color/gray_text</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextAppearance">@style/HintTextAppearance.Custom</item>
    </style>

    <style name="HintTextAppearance.Custom" parent="">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Base.Custom.Chip.Rating" parent="android:Widget">
        <item name="enforceMaterialTheme">true</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipIcon">@drawable/ic_rating_star</item>
        <item name="background">@drawable/chip_rating</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="chipSurfaceColor">@color/yellow_transparent</item>
        <item name="chipBackgroundColor">@color/yellow_transparent</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinTouchTargetSize">48dp</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="chipIconSize">15dp</item>
        <item name="chipStartPadding">2dp</item>
        <item name="iconStartPadding">10dp</item>
        <item name="iconEndPadding">2dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">6dp</item>
        <item name="chipEndPadding">6dp</item>
    </style>

    <style name="blue14">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#0D72FF</item>
    </style>

    <style name="gray14regular">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#828796</item>
    </style>

    <style name="blue16semibold">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0D72FF</item>
    </style>

    <style name="gray16regular">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#828796</item>
    </style>

    <style name="black16">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="value">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">#14142B</item>
    </style>

    <style name="black18">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="black22medium">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>